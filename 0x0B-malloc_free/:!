#include"main.h"
#include <stdio.h>
#include <stdlib.h>

/**
 * *create_array -  creates an array of chars
 *
 * @size : size
 * @char : the char
 *
 * Return: 0 or 1
 */
char *create_array(unsigned int size, char c)
{
	int i = malloc(size * sizeof(char));
	int j = 0;
	char b[i];
	if (size == 0)
	{
		return (NULL);
	}
	else
	{
		for (j = 0;j < i;j++);
		{
			b[j] = c;
		}
	}
	return (&b);
}


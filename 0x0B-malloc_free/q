#include"main.h"
#include <stdio.h>
#include <stdlib.h>

/**
 * *create_array -  creates an array of chars
 *
 * @size : size
 * @char : the char
 *
 * Return: 0 or 1
 */
char *create_array(unsigned int size, char c)
{
	char *b = malloc(size * sizeof(c));
	int i = 0;
	char k = c;

	if (size == 0)
	{
		return (NULL);
	}
		while (*b != '\0')
		{
			b[i] = k;
			i++;
		}
	return (b);
}
